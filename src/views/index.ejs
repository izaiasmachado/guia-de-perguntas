<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include('partials/head') %>
  </head>
  <body class="container-fluid p-0 m-0 h-100" style="min-height: 100vh;">
    <div class="d-flex flex-column justify-content-between" style="min-height: 100vh;">
      <%- include('partials/navbar') %>
      <main style="flex:1">
        <div class="container col-11 col-md-8 mt-3 mb-3">
          <div
          class="d-flex justify-content-between align-items-center pb-3 pt-3"
          >
            <div class="col-6">
              <h2 class="d-none d-md-block">Perguntas do momento</h2>
             <h4 class="d-block d-md-none">Perguntas do momento</h4>
            </div>
            <div>
              <a href="/q/ask" class="btn btn-primary btn-sm d-block d-md-none">Nova pergunta</a>
              <a href="/q/ask" class="btn btn-primary d-none d-md-block">Nova pergunta</a>
            </div>
          </div>

          <div class="container flex-column mb-3">
            <% for (let i=0;i<questions.length;i++){ %>
              <div class="row mb-3">
                <%- include('partials/card-pergunta', { question: questions[i] }) %>
              </div>
            <% } %>
          </div>
          </div>
      </main>
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
