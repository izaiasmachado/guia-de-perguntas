<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include('partials/head') %>
  </head>
  <body class="container-fluid p-0 m-0 h-100" style="min-height: 100vh">
    <div
      class="d-flex flex-column justify-content-between"
      style="min-height: 100vh"
    >
      <%- include('partials/navbar') %>
      <main style="flex: 1" class="flex-column d-flex justify-content-center">
        <div class="container py-5 h-100">
          <div
            class="row d-flex align-items-center justify-content-center h-100"
          >
            <div class="col-xl-5 d-none d-xl-block">
              <img
                src="/public/img/sign-up.svg"
                class="img-fluid"
                alt="Phone image"
              />
            </div>

            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
              <% if (typeof alerts !== 'undefined') { %>
              <div
                class="alert alert-danger mt-3"
                role="alert"
                style="display: <%= alerts?.globalDanger ? 'block' : 'none' %>"
              >
                <%= alerts?.globalDanger %>
              </div>
              <% } %>

              <form method="POST">
                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="emailInput">Nome</label>
                  <input
                    name="name"
                    type="text"
                    class="form-control form-control-lg <%= errors?.name ? 'is-invalid' : '' %>"
                    value="<%= data?.name %>"
                    aria-describedby="validationServerSideName"
                  />
                  <div id="validationServerSideName" class="invalid-feedback">
                    <%= errors?.name?._errors?.[0] %>
                  </div>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="emailInput"
                    >Nome de usuário</label
                  >
                  <input
                    name="username"
                    type="text"
                    class="form-control form-control-lg <%= errors?.username ? 'is-invalid' : '' %>"
                    value="<%= data?.username %>"
                    aria-describedby="validationServerSideUsername"
                  />
                  <div
                    id="validationServerSideUsername"
                    class="invalid-feedback"
                  >
                    <%= errors?.username?._errors?.[0] %>
                  </div>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="emailInput">E-mail</label>
                  <input
                    name="email"
                    type="email"
                    class="form-control form-control-lg <%= errors?.email ? 'is-invalid' : '' %>"
                    value="<%= data?.email %>"
                    aria-describedby="validationServerSideEmail"
                  />
                  <div id="validationServerSideEmail" class="invalid-feedback">
                    <%= errors?.email?._errors?.[0] %>
                  </div>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="passwordInput">Senha</label>
                  <input
                    name="password"
                    type="password"
                    class="form-control form-control-lg <%= errors?.password ? 'is-invalid' : '' %>"
                    value="<%= data?.password %>"
                    aria-describedby="validationServerSidePassword"
                  />
                  <div
                    id="validationServerSidePassword"
                    class="invalid-feedback"
                  >
                    <%= errors?.password?._errors?.[0] %>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary col-12">
                  Criar conta
                </button>

                <div class="divider d-flex align-items-center my-4">
                  <p class="text-center fw-bold mx-3 mb-0 text-muted">OU</p>
                </div>

                <a
                  href="<%= data?.loginUrl %>"
                  class="btn btn-outline-primary col-12"
                >
                  Já tenho uma conta
                </a>
              </form>
            </div>
          </div>
        </div>
      </main>
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
