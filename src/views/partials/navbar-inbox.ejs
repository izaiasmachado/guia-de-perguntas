<div>
  <% if (typeof inboxMessages !== 'undefined' && Array.isArray(inboxMessages) &&
  inboxMessages.length > 0) { %> <% inboxMessages.forEach(function(message,
  messageIndex) { %>
  <a href="/q/<%= message.answer.question.id %>" class="text-decoration-none">
    <li class="dropdown-item d-flex flex-column gap-2">
      <div class="d-flex justify-content-between">
        <strong>comentário</strong>
        <small id="inbox-<%= message.id %>-createdAt"></small>
      </div>

      <div class="d-flex flex-column gap-1" style="width: 100%">
        <div class="text-truncate mb-1">
          <%= message.answer.question.title %>
        </div>
        <div
          style="
            height: fit-content;
            white-space: normal;
            overflow: hidden;
            width: 100%;
          "
        >
          <%= message.answer.content.substring(0, 100) + '...' %>
        </div>
      </div>
      <script>
        document.getElementById("inbox-<%= message.id %>-createdAt").innerHTML =
          formatDateToBrowserTimezone("<%= message.createdAt %>");
      </script>
      <% if (messageIndex !== inboxMessages.length - 1) { %>
    </li>

    <li class="dropdown-divider"></li>
    <% } %> <% }); %> <% } else { %>

    <li><a class="dropdown-item" href="#"> Sem notificações </a></li>
  </a>
  <% } %>
</div>
