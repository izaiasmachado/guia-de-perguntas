<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      .best-answer {
        border: 2px solid gold;
      }
    </style>
    <title><%= question.title %></title>
  </head>
  <body class="container-fluid p-0 m-0 h-100">
    <div class="d-flex flex-column">
      <%- include('partials/navbar') %>

      <main class="container col-11 col-md-8 mt-3 mb-3">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title"><%= question.title %></h2>
            <hr />
            <div class="card-text"><%= question.content %></div>
            <p class="card-text">
              <small class="text-muted">
                Postado por <strong><%= question.author.username %></strong>
                em <%= new Date(question.createdAt).toLocaleString("pt-BR") %>
              </small>
            </p>
          </div>
        </div>

        <!-- Div para exibir respostas -->
        <div class="container mt-3">
          <h4>Respostas</h4>
          <hr />
          <% if (answers.length > 0) { %>
            <% answers.forEach((answer) => { %>
              <div class="card mb-3 <%= answer.isBest ? 'best-answer' : '' %>">
                <div class="card-body">
                  <h5 class="card-title"><%= answer.author.username %></h5>
                  <p class="card-text"><%= answer.content %></p>
                  <p class="card-text">
                    <small class="text-muted">
                      Postado em <%= new Date(answer.createdAt).toLocaleString("pt-BR") %>
                    </small>
                  </p>
                  <% if (question.author.id === user.id) { %>
                    <button
                      class="btn btn-outline-primary mark-best-btn"
                      data-answer-id="<%= answer.id %>"
                      data-question-id="<%= question.id %>"
                    >
                      Marcar como melhor resposta
                    </button>
                  <% } %>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>Não há respostas ainda.</p>
          <% } %>
        </div>

        <!-- Form para enviar respostas -->
        <div class="container mt-3">
          <hr />
          <h4>Adicionar uma resposta</h4>
          <form action="/q/<%= question.id %>/answers" method="POST">
            <div class="mb-3">
              <label for="content" class="form-label">Sua resposta</label>
              <textarea
                class="form-control"
                id="content"
                name="content"
                rows="3"
                required
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>
        </div>
      </main>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".mark-best-btn");

        buttons.forEach((button) => {
          button.addEventListener("click", async function () {
            const answerId = this.getAttribute("data-answer-id");
            const questionId = this.getAttribute("data-question-id");

            try {
              const response = await fetch(`/q/${questionId}/answers/${answerId}/best`, {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
              });

              if (response.ok) {
                document.querySelectorAll(".best-answer").forEach((el) => {
                  el.classList.remove("best-answer");
                });
                this.closest(".card").classList.add("best-answer");
              } else {
                alert("Erro ao marcar a resposta como a melhor.");
              }
            } catch (error) {
              console.error("Erro:", error);
              alert("Erro ao marcar a resposta como a melhor.");
            }
          });
        });
      });
    </script>
  </body>
</html>
