    <style>
      .best-answer {
        border: 5px solid green;
        position: relative;
      }
      .best-answer-badge {
        position: absolute;
        top: -10px;
        right: -10px;
        background-color: gold;
        color: black;
        padding: 5px 10px;
        font-weight: bold;
        border-radius: 3px;
      }
    </style>
    <title><%= question.title %></title>
  </head>
  <body class="container-fluid p-0 m-0 h-100">
    <div class="d-flex flex-column">
      <%- include('partials/navbar') %>

      <main class="container col-11 col-md-8 mt-3 mb-3">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title"><%= question.title %></h2>
            <hr />
            <div class="card-text"><%= question.content %></div>
            <p class="card-text">
              <small class="text-muted">
                Postado por <strong><%= question.author.username %></strong>
                em <%= new Date(question.createdAt).toLocaleString("pt-BR") %>
              </small>
            </p>
          </div>
        </div>

        <!-- Div para exibir respostas -->
        <div class="container mt-3">
          <h4>Respostas</h4>
          <hr />
          <div id="answers-container">
            <% if (answers.length > 0) { %> <% answers.forEach((answer) => { %>
            <div
              class="card mb-3 answer-card <%= answer.isBest ? 'best-answer' : '' %>"
              data-answer-id="<%= answer.id %>"
            >
              <div class="card-body">
                <% if (answer.isBest) { %>
                <div class="best-answer-badge">Melhor Resposta</div>
                <% } %>
                <h5 class="card-title"><%= answer.author.username %></h5>
                <p class="card-text"><%= answer.content %></p>
                <p class="card-text">
                  <small class="text-muted">
                    Postado em <%= new
                    Date(answer.createdAt).toLocaleString("pt-BR") %>
                  </small>
                </p>
                <% if (isAuthenticated && question.author.id === user?.id) { %>
                <% if (!answer.isBest) { %>

                <form
                  action="/answer/<%= answer.id %>/mark-solution"
                  method="POST"
                >
                  <button class="btn btn-outline-primary mark-best-btn">
                    Marcar como melhor resposta
                  </button>
                </form>
                <% } else {%>
                <form
                  action="/answer/<%= answer.id %>/unmark-solution"
                  method="POST"
                >
                  <button class="btn btn-outline-danger mark-best-btn">
                    Desmarcar como melhor resposta
                  </button>
                </form>
                <% } %> <% } %>
              </div>
            </div>
            <% }); %> <% } else { %>
            <p>Não há respostas ainda.</p>
            <% } %>
          </div>
        </div>

        <!-- Form para enviar respostas -->
        <div class="container mt-3">
          <hr />
          <h4>Adicionar uma resposta</h4>
          <form action="/answer" method="POST">
            <div class="mb-3">
              <label for="content" class="form-label">Sua resposta</label>
              <textarea
                class="form-control"
                id="content"
                name="content"
                rows="3"
                required
              ></textarea>
            </div>
            <!-- hidden attribute for questionId -->
            <input
              type="number"
              hidden
              name="questionId"
              value="<%= question.id %>"
            />
            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>
        </div>
      </main>
    </div>

